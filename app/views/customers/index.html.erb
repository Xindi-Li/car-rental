<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Customers</h1>

    <table class="table table-striped table-bordered">
      <thead>
      <tr>
        <th>email</th>
        <th>name</th>
        <th colspan="3">operation</th>
      </tr>
      </thead>

      <tbody>
      <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.email %></td>
            <td><%= customer.name %></td>
            <td><%= link_to 'view', customer_path(customer) %></td>
            <% if login_authority.eql? 'super' or login_authority.eql? 'admin' %>
                <td><%= link_to 'edit', edit_customer_path(customer) %></td>
                <td><%= link_to 'delete', customer_path(customer), method: :delete, data: {confirm: 'Are you sure?'} %></td>
            <% end %>
          </tr>
      <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Customer', new_customer_path, class: "btn btn-primary" %>
  </div>
</div>
