    <%= f.label :model %>
    <%= f.text_field :model %>


    <%= f.label 'Hourly rental rate' %>
    <%= f.number_field :hrr, :step => 0.01 %>


    <%= f.label :style %>
    <%= f.text_field :style %>

    <%= f.label :location %>
    <%= f.text_field :location %>

    <div class="form-group">
