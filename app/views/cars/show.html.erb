<p>
  <strong>License-place Number</strong>
  <%= @car.lpn %>
</p>

<p>
  <strong>Manufactuere</strong>
  <%= @car.manufactuere %>
</p>

<p>
  <strong>Model</strong>
  <%= @car.model %>
</p>

<p>
  <strong>Hourly rental rate</strong>
  <%= @car.hrr %>
</p>

<p>
  <strong>Style</strong>
  <%= @car.location %>
</p>

<p>
  <strong>Location</strong>
  <%= @car.location %>
</p>

<p>
  <strong>Status</strong>
  <%= @car.status %>
  <% if @car.status =='Reserved' or @car.status =='Checkout' %>
      by <%= get_user @car.lpn %>
  <% end %>
</p>
<% if @car.img_attach? %>
    <strong>Image</strong>
    <%= image_tag (@car.img_attach.url), class: 'img-responsive center-block' %>
<% end %>
<p>
  <% if login_authority =='Customer' %>
      <%= link_to 'Current reservation', customer_reservation_path(:customer => {:email => current_user.email}) %>
  <% end %>
</p>

<p>
  <%= link_to 'Checkout History', carhistory_path(:car => {:carlpn => @car.lpn}) %>
</p>
<% if login_authority == 'Customer' %>
    <p>
      <%= link_to 'Edit', edit_car_path(@car) %>
    </p>
<% end %>
<p>
  <%= link_to 'Back', cars_path %>
</p>