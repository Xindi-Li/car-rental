<h2 id="notice"><%= notice %></h2>
<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <h1>Admins</h1>

    <table class="table table-striped table-bordered">
      <thead>
      <tr>
        <th>email</th>
        <th>name</th>
        <th colspan="2">operation</th>
      </tr>
      </thead>

      <tbody>
      <% @admins.each do |admin| %>
          <tr>
            <td><%= admin.email %></td>
            <td><%= admin.name %></td>
            <td><%= link_to 'View', admin_path(admin) %></td>

            <% if login_authority=='super' or login_authority=='admin' and current_user.email != admin.email %>
                <td><%= link_to 'Delete', admin_path(admin), method: :delete, data: {confirm: 'Are you sure?'} %></td>
            <% else %>
                <td></td>
            <% end %>
          </tr>
      <% end %>
      </tbody>
    </table>
    <br>
    <%= link_to 'New Admin', new_admin_path, class: "btn btn-primary" %>
  </div>
</div>
